<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DropDownView">
        <attr name="filter_height" format="dimension" />
        <attr name="filter_text_size" format="dimension"/>
        <attr name="filter_text_color" format="reference"/>
        <attr name="filter_bar_background_color" format="reference"/>
        <attr name="arrow_start_margin" format="dimension"/>
        <attr name="arrow_end_margin" format="dimension"/>
        <attr name="arrow_width" format="dimension" />
        <attr name="arrow_height" format="dimension" />
        <attr name="arrow_drawable" format="reference" />
        <attr name="arrow_rotate" format="boolean" />
        <attr name="divider_height" format="dimension"/>
        <attr name="divider_color" format="reference" />
        <attr name="dropDownItem_height" format="dimension"/>
        <attr name="dropDownItem_text_size" format="dimension"/>
        <attr name="dropDownItem_text_size_selected" format="dimension"/>
        <attr name="dropDownItem_text_color" format="reference" />
        <attr name="dropDownItem_text_color_selected" format="reference"/>
        <attr name="dropDownItem_background_color" format="reference"/>
        <attr name="dropDownItem_background_color_selected" format="reference"/>
        <attr name="expand_dim_background" format="boolean"/>
        <attr name="dim_background_color" format="reference" />
        <attr name="expand_include_selected_item" format="boolean"/>
        <attr name="placeholder_text" format="string"/>
        <attr name="dropdown_typeface" format="reference"/>
        <attr name="dropdown_animation_duration" format="integer"/>
        <attr name="dropdownItem_text_gravity" format="enum">
            <enum name="center_horizontal" value="0"/>
            <enum name="start" value="1"/>
            <enum name="end" value="2"/>
        </attr>
        <attr name="dropdownItem_compound_drawable_selected" format="reference"/>
        <attr name="top_decorator_height" format="dimension"/>
        <attr name="top_decorator_color" format="reference"/>
        <attr name="bottom_decorator_height" format="dimension"/>
        <attr name="bottom_decorator_color" format="reference"/>
        <attr name="expansion_style" format="enum">
            <enum name="reveal" value="0"/>
            <enum name="drawer" value="1"/>
        </attr>
        <attr name="last_item_has_divider" format="boolean"/>
        <attr name="arrow_align_end" format="boolean"/>
    </declare-styleable>


</resources>